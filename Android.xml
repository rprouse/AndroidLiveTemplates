  <template name="tools" value="xmlns:tools=&quot;http://schemas.android.com/tools&quot;" description="Add tools namespace" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="XSL_TEXT" value="true" />
      <option name="XML" value="true" />
      <option name="XML_TEXT" value="true" />
    </context>
  </template>
  <template name="android" value="xmlns:android=&quot;http://schemas.android.com/apk/res/android&quot;" description="Add android namespace" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="XSL_TEXT" value="true" />
      <option name="XML" value="true" />
      <option name="XML_TEXT" value="true" />
